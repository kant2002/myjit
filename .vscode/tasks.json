{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": ["--build", "build"],
            "label": "My build",
            "command": "cmake",
            "options": {"cwd": "${workspaceFolder}"},
            "problemMatcher": ["$msCompile"],
        }
    ]
}